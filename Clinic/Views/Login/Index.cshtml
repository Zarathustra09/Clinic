@model Clinic.Models.LoginDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <title>Clinic Login - Healthcare Management System</title>
    <meta name="description" content="Clinic Management System Login" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #087830 0%, #0a5d29 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .login-container {
            max-width: 400px;
            margin: 0 auto;
        }

        .login-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .clinic-header {
            background: linear-gradient(135deg, #087830 0%, #0a5d29 100%);
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .clinic-logo {
            font-size: 3rem;
            margin-bottom: 0.5rem;
        }

        .clinic-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0;
        }

        .clinic-subtitle {
            font-size: 0.9rem;
            opacity: 0.9;
            margin: 0;
        }

        .login-form {
            padding: 2rem;
        }

        .form-floating {
            margin-bottom: 1rem;
        }

        .form-control {
            border: 2px solid #e8f5e8;
            border-radius: 10px;
            padding: 0.75rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #087830;
                box-shadow: 0 0 0 0.2rem rgba(8, 120, 48, 0.25);
            }

        .btn-clinic {
            background: linear-gradient(135deg, #087830 0%, #0a5d29 100%);
            border: none;
            border-radius: 10px;
            padding: 0.75rem;
            color: white;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
            margin-bottom: 1rem;
        }

            .btn-clinic:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(8, 120, 48, 0.4);
                color: white;
            }

        .btn-outline-clinic {
            background: transparent;
            border: 2px solid #087830;
            border-radius: 10px;
            padding: 0.75rem;
            color: #087830;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
        }

            .btn-outline-clinic:hover {
                background: #087830;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(8, 120, 48, 0.4);
            }

        .alert-danger {
            border-radius: 10px;
            border: none;
            background-color: #ffebee;
            color: #c62828;
        }

        .divider {
            text-align: center;
            margin: 1.5rem 0;
            position: relative;
        }

            .divider::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 0;
                right: 0;
                height: 1px;
                background: #e9ecef;
            }

            .divider span {
                background: white;
                padding: 0 1rem;
                color: #6c757d;
                font-size: 0.875rem;
            }
    </style>
</head>

<body>
    <div class="container">
        <div class="login-container">
            <div class="login-card">
                <!-- Clinic Header -->
                <div class="clinic-header">
                    <div class="clinic-logo">
                        <i class="fas fa-clinic-medical"></i>
                    </div>
                    <h1 class="clinic-title">Clinic Management</h1>
                    <p class="clinic-subtitle">Healthcare Administration System</p>
                </div>

                <!-- Login Form -->
                <div class="login-form">
                    <h4 class="text-center mb-4 text-muted">Welcome Back! 👨‍⚕️</h4>
                    <p class="text-center text-muted mb-4">Please sign in to access your account</p>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                        </div>
                    }

                    <form asp-action="Index" asp-controller="Login" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-floating mb-3">
                            <input asp-for="Username"
                                   type="text"
                                   class="form-control"
                                   id="username"
                                   placeholder="Enter your username"
                                   autofocus />
                            <label for="username">
                                <i class="fas fa-user me-2"></i>Username
                            </label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Password"
                                   type="password"
                                   class="form-control"
                                   id="password"
                                   placeholder="Enter your password" />
                            <label for="password">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-clinic">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In
                        </button>
                    </form>

                    <div class="divider">
                        <span>New to Clinic Management?</span>
                    </div>

                    <a asp-controller="Registration" asp-action="Index" class="btn btn-outline-clinic">
                        <i class="fas fa-user-plus me-2"></i>Create Account
                    </a>

                    <div class="text-center mt-4">
                        <small class="text-muted">
                            © 2025 Clinic Management System. All rights reserved.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>