@model Clinic.Models.StudentDto

@{

    Layout = "_Layout"; 
    ViewData["Title"] = "Add New Student";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Students /</span> Add New Student
    </h4>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Student Information</h5>
                    <small class="text-muted">Fill in student details</small>
                </div>
                <div class="card-body">
                    <form asp-controller="Student" asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row mb-3">
                            <label asp-for="SchoolID" class="col-sm-3 col-form-label">School ID</label>
                            <div class="col-sm-9">
                                <input asp-for="SchoolID" class="form-control" placeholder="Enter school ID (optional)" />
                                <div class="form-text">Student's institutional ID number</div>
                                <span asp-validation-for="SchoolID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="FirstName" class="col-sm-3 col-form-label">First Name *</label>
                            <div class="col-sm-9">
                                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="MiddleName" class="col-sm-3 col-form-label">Middle Name</label>
                            <div class="col-sm-9">
                                <input asp-for="MiddleName" class="form-control" placeholder="Enter middle name (optional)" />
                                <span asp-validation-for="MiddleName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="LastName" class="col-sm-3 col-form-label">Last Name *</label>
                            <div class="col-sm-9">
                                <input asp-for="LastName" class="form-control" placeholder="Enter last name" required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Email" class="col-sm-3 col-form-label">Email Address *</label>
                            <div class="col-sm-9">
                                <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" required />
                                <div class="form-text">Must be a valid email address</div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Username" class="col-sm-3 col-form-label">Username *</label>
                            <div class="col-sm-9">
                                <input asp-for="Username" class="form-control" placeholder="Enter username" required />
                                <div class="form-text">Username for login access</div>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Password" class="col-sm-3 col-form-label">Password *</label>
                            <div class="col-sm-9">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required />
                                <div class="form-text">Minimum 6 characters recommended</div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Program" class="col-sm-3 col-form-label">Program/Course</label>
                            <div class="col-sm-9">
                                <input asp-for="Program" class="form-control" placeholder="Enter program or course of study" />
                                <div class="form-text">e.g., Computer Science, Medicine, Engineering</div>
                                <span asp-validation-for="Program" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row justify-content-end">
                            <div class="col-sm-9">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="bx bx-plus me-1"></i>Create Student
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bx bx-arrow-back me-1"></i>Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bx bx-info-circle me-2"></i>Information
                    </h6>
                    <div class="mb-3">
                        <h6 class="text-primary">Student Role</h6>
                        <p class="text-muted small">
                            Students can book appointments with doctors and access their medical records through the clinic system.
                        </p>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-primary">Required Fields</h6>
                        <ul class="text-muted small">
                            <li>First Name</li>
                            <li>Last Name</li>
                            <li>Email Address</li>
                            <li>Username</li>
                            <li>Password</li>
                        </ul>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-primary">Optional Fields</h6>
                        <ul class="text-muted small">
                            <li>School ID</li>
                            <li>Middle Name</li>
                            <li>Program/Course</li>
                        </ul>
                    </div>

                    <div class="alert alert-info">
                        <i class="bx bx-lightbulb me-2"></i>
                        <strong>Tip:</strong> Ensure the email and username are unique in the system.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 2px 6px 0 rgba(67, 89, 113, 0.12);
        border-radius: 0.375rem;
    }

    .btn-primary {
        background-color: #087830;
        border-color: #087830;
    }

        .btn-primary:hover {
            background-color: #0a5d29;
            border-color: #0a5d29;
        }

    .form-control:focus {
        border-color: #087830;
        box-shadow: 0 0 0 0.2rem rgba(8, 120, 48, 0.25);
    }

    .text-primary {
        color: #087830 !important;
    }

    .alert-info {
        background-color: #e8f5e8;
        border-color: #087830;
        color: #065d20;
    }

    .form-text {
        color: #6c757d;
        font-size: 0.875rem;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}