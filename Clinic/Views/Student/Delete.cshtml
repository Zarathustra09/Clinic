@model Clinic.Models.StudentDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete Student";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Students /</span> Delete Student
    </h4>

    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom-0">
                    <h5 class="mb-0 text-danger">
                        <i class="bx bx-error-circle me-2"></i>Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="bx bx-error-circle me-2 fs-4"></i>
                        <div>
                            <h6 class="alert-heading fw-bold mb-1">Warning!</h6>
                            <span>This action cannot be undone. Are you sure you want to delete this student?</span>
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div>
                                <label class="form-label fw-medium mb-0">Full Name</label>
                                <div class="form-control-plaintext ps-2">
                                    @Model.FullName
                                </div>
                            </div>
                            <div>
                                <label class="form-label fw-medium mb-0">School ID</label>
                                <div class="form-control-plaintext ps-2">
                                    @(Model.SchoolID ?? "Not provided")
                                </div>
                            </div>
                            <div>
                                <label class="form-label fw-medium mb-0">Email</label>
                                <div class="form-control-plaintext ps-2">@Model.Email</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div>
                                <label class="form-label fw-medium mb-0">Username</label>
                                <div class="form-control-plaintext ps-2">@Model.Username</div>
                            </div>
                            <div>
                                <label class="form-label fw-medium mb-0">Program</label>
                                <div class="form-control-plaintext ps-2">
                                    @(Model.Program ?? "Not specified")
                                </div>
                            </div>
                            <div>
                                <label class="form-label fw-medium mb-0">Created Date</label>
                                <div class="form-control-plaintext ps-2">
                                    @Model.CreatedAt.ToString("MMM dd, yyyy")
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bx bx-arrow-back me-1"></i>Cancel
                        </a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input asp-for="Id" type="hidden" />
                            <button type="submit" class="btn btn-danger">
                                <i class="bx bx-trash me-1"></i>Delete Student
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
        box-shadow: 0 2px 8px 0 rgba(8, 120, 48, 0.08);
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffecb5;
        color: #664d03;
        border-radius: 0.375rem;
        margin-bottom: 1.5rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
            border-color: #b02a37;
        }

    .btn-outline-secondary {
        border-radius: 0.375rem;
    }

    .form-control-plaintext {
        background: #f8f9fa;
        border-radius: 0.375rem;
        padding: 0.5rem 0.75rem;
        margin-bottom: 1rem;
        font-size: 1rem;
    }

    .fw-medium {
        font-weight: 500;
    }

    .ps-2 {
        padding-left: 0.5rem;
    }
</style>