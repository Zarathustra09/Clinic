@model IEnumerable<Clinic.Models.StudentDto>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Students Management";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">User Management /</span> Students
    </h4>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Students List</h5>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bx bx-plus me-1"></i>Add New Student
            </a>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover" id="studentTable">
                <thead>
                    <tr>
                        <th>School ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Username</th>
                        <th>Program</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-primary">@(student.SchoolID ?? "N/A")</span>
                            </td>
                            <td>
                                <strong>@student.FirstName @student.MiddleName @student.LastName</strong>
                            </td>
                            <td>@student.Email</td>
                            <td>@student.Username</td>
                            <td>@(student.Program ?? "Not Specified")</td>
                            <td>@student.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="Show" asp-route-id="@student.Id">
                                            <i class="bx bx-show me-1"></i> View Details
                                        </a>
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@student.Id">
                                            <i class="bx bx-edit-alt me-1"></i> Edit
                                        </a>
                                        <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@student.Id">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 2px 6px 0 rgba(67, 89, 113, 0.12);
        border-radius: 0.375rem;
    }

    .badge.bg-primary {
        background-color: #087830 !important;
    }

    .btn-primary {
        background-color: #087830;
        border-color: #087830;
    }

        .btn-primary:hover {
            background-color: #0a5d29;
            border-color: #0a5d29;
        }
</style>


<script>
    $(document).ready( function () {
        $('#studentTable').DataTable();
    } );
</script>