@model Clinic.Models.DoctorDto

@{
    ViewData["Title"] = "Edit Doctor";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Doctors /</span> Edit Doctor
    </h4>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Doctor Information</h5>
                    <small class="text-muted">Update doctor details</small>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedAt" type="hidden" />

                        <div class="row mb-3">
                            <label asp-for="SchoolID" class="col-sm-3 col-form-label">Employee ID</label>
                            <div class="col-sm-9">
                                <input asp-for="SchoolID" class="form-control" placeholder="Enter employee ID (optional)" />
                                <span asp-validation-for="SchoolID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="FirstName" class="col-sm-3 col-form-label">First Name *</label>
                            <div class="col-sm-9">
                                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="MiddleName" class="col-sm-3 col-form-label">Middle Name</label>
                            <div class="col-sm-9">
                                <input asp-for="MiddleName" class="form-control" placeholder="Enter middle name (optional)" />
                                <span asp-validation-for="MiddleName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="LastName" class="col-sm-3 col-form-label">Last Name *</label>
                            <div class="col-sm-9">
                                <input asp-for="LastName" class="form-control" placeholder="Enter last name" required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Email" class="col-sm-3 col-form-label">Email *</label>
                            <div class="col-sm-9">
                                <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Username" class="col-sm-3 col-form-label">Username *</label>
                            <div class="col-sm-9">
                                <input asp-for="Username" class="form-control" placeholder="Enter username" required />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Program" class="col-sm-3 col-form-label">Specialization</label>
                            <div class="col-sm-9">
                                <input asp-for="Program" class="form-control" placeholder="Enter specialization" />
                                <span asp-validation-for="Program" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row justify-content-end">
                            <div class="col-sm-9">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="bx bx-save me-1"></i>Update Doctor
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bx bx-arrow-back me-1"></i>Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Doctor Details</h6>
                    <div class="mb-2">
                        <small class="text-muted">Doctor ID:</small>
                        <div class="fw-medium">@Model.Id</div>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted">Role:</small>
                        <div><span class="badge bg-primary">Doctor</span></div>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted">Created:</small>
                        <div class="fw-medium">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</div>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted">Last Updated:</small>
                        <div class="fw-medium">@Model.UpdatedAt.ToString("MMM dd, yyyy HH:mm")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 2px 6px 0 rgba(67, 89, 113, 0.12);
        border-radius: 0.375rem;
    }

    .badge.bg-primary {
        background-color: #087830 !important;
    }

    .btn-primary {
        background-color: #087830;
        border-color: #087830;
    }

        .btn-primary:hover {
            background-color: #0a5d29;
            border-color: #0a5d29;
        }

    .form-control:focus {
        border-color: #087830;
        box-shadow: 0 0 0 0.2rem rgba(8, 120, 48, 0.25);
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}