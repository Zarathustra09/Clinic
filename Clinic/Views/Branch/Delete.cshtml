@model Clinic.Models.BranchDto

@{
    ViewData["Title"] = "Delete Branch";
    var branchEntity = ViewBag.BranchEntity as Clinic.Models.Branches;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Branches /</span> Delete Branch
    </h4>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-danger">
                    <h5 class="mb-0 text-white">
                        <i class="bx bx-trash me-2"></i>Delete Branch Confirmation
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger mb-4">
                        <h6><i class="bx bx-error-circle me-2"></i>Are you sure you want to delete this branch?</h6>
                        <p class="mb-0">This action cannot be undone.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Branch Name:</dt>
                        <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-3">Address:</dt>
                        <dd class="col-sm-9">@(Model.Address ?? "No address specified")</dd>

                        <dt class="col-sm-3">Total Appointments:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.AppointmentCount</span>
                        </dd>
                    </dl>

                    @if (Model.AppointmentCount > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="bx bx-error me-2"></i>
                            <strong>Warning:</strong> This branch has @Model.AppointmentCount appointment(s). You cannot delete a branch with existing appointments.
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bx bx-error me-2"></i>
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bx bx-arrow-back me-1"></i>Cancel
                        </a>

                        @if (Model.AppointmentCount == 0)
                        {
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure? This cannot be undone.')">
                                    <i class="bx bx-trash me-1"></i>Delete Branch
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title text-danger">
                        <i class="bx bx-error-circle me-2"></i>Deletion Policy
                    </h6>

                    <div class="mb-3">
                        <h6 class="text-danger">Cannot Delete If:</h6>
                        <ul class="text-muted small">
                            <li>Branch has existing appointments</li>
                            <li>Branch has scheduled future appointments</li>
                        </ul>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-danger">Before Deleting:</h6>
                        <ul class="text-muted small">
                            <li>Cancel or reschedule all appointments</li>
                            <li>Transfer appointments to another branch</li>
                            <li>Notify affected patients and staff</li>
                        </ul>
                    </div>

                    <div class="alert alert-danger">
                        <i class="bx bx-shield-x me-2"></i>
                        <strong>Important:</strong> This action is permanent and cannot be reversed.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 2px 6px 0 rgba(67, 89, 113, 0.12);
        border-radius: 0.375rem;
    }

    .btn-danger {
        background-color: #d32f2f;
        border-color: #d32f2f;
    }

        .btn-danger:hover {
            background-color: #b71c1c;
            border-color: #b71c1c;
        }

    .text-danger {
        color: #d32f2f !important;
    }

    .alert-danger {
        background-color: #ffebee;
        border-color: #d32f2f;
        color: #b71c1c;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeaa7;
        color: #856404;
    }
</style>